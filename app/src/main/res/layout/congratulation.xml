<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_congratulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/congratulation"
            android:layout_marginTop="60dp"
            />
        <TextView
            android:id="@+id/tv_congratulation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_congratulation"
            android:text="Congratulations"
            android:gravity="center"
            android:textSize="30dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_congratulation"
            android:text="You've officialy become an Explorer!"
            android:textSize="20dp"
            android:layout_margin="20dp"
            android:textColor="@color/colorPrimary"
            android:gravity="center"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>