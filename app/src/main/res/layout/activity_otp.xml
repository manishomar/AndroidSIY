<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword.OTPActivity">


    <RelativeLayout
        android:id="@+id/root_layout_forgetpassword"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:src="@drawable/back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_arrow"
            android:text="Enter OTP"
            android:textSize="20sp"
            android:textColor="@color/colorWhite"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="15dp"
            android:textStyle="bold"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_forget_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/root_layout_forgetpassword"
        android:text="Please enter the temporary code from your email below"
        android:gravity="center"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/input_email_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_forget_password"
        >

        <EditText
            android:padding="10dp"
            android:id="@+id/et_forget_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forget_password"
            android:layout_marginLeft="60sp"
            android:hint=" XXX-XXX"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginRight="60sp"
            android:layout_marginTop="30dp"/>

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_otp_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_below="@+id/input_email_wrapper"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_custom_email"
        android:onClick="btnResetPassword"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Resend Code?"
        android:layout_below="@+id/btn_otp_submit"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"/>
</RelativeLayout>
