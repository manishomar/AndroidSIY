<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siy.controller.RecorderSignUp.IntroSlideRecorderActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/vp_slide_recorder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/root_layout_tutorial_recorder">

    </android.support.v4.view.ViewPager>

    <RelativeLayout
        android:id="@+id/root_layout_tutorial_recorder"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite"
        android:layout_alignParentBottom="true">
        <Button
            android:id="@+id/btn_skip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Skip"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:visibility="visible"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:text="Next"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:textAllCaps="false"/>
    </RelativeLayout>

</RelativeLayout>
